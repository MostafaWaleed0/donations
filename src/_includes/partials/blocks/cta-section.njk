<section class="[ cta ] [ wrapper ]">
  <div class="[ cta__content ] [ flow ] [ text-center ]">
    <h2 class="text-white">You can contribute to make the environment greener!</h2>
    <div class="[ cta__button ] [ flex-space-column-responsive ] [ gap-4 ]">
      <button class="[ button ]" data-type="primary" id="btn-popup">
        Join as a volunteer
      </button>
      <a href="" class="[ button ]" data-type="secondary">Donate</a>
    </div>
  </div>
  <dialog class="[ popup ] [ bg-default padding-6 ]" id="popup">
    <div>
      <div class="popup__close" id="close-popup">
        <span class="[ fa-solid fa-square-xmark ] [ fs-600 ]" aria-hidden="true"></span>
      </div>
      <div class="[ popup__content ] [ flow ]">
        <h2>Join as a volunteer</h2>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspen varius enim in
          eros elementum tristique.
        </p>
        <div class="popup__form">
          <form action="#" class="flow">
            <div class="[ inputs ] [ gap-4 ]">
              <div>
                <label for="first-name">first name</label>
                <input type="text" id="first-name" />
              </div>
              <div>
                <label for="last-name">last name</label>
                <input type="text" id="last-name" />
              </div>
              <div>
                <label for="email">email id</label>
                <input type="email" id="email" />
              </div>
            </div>
            <div>
              <label for="message">message</label>
              <textarea
                class="padding-3"
                name="message"
                cols="30"
                id="message"
                placeholder="Type your Message"
              ></textarea>
            </div>
            <button class="[ button ]" data-type="primary">Send message</button>
          </form>
        </div>
      </div>
    </div>
  </dialog>
</section>
